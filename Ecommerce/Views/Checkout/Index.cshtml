@{
    ViewData["Title"] = "Checkout Page";
}

<section class="container my-5">
    <h2 class="mb-4">Checkout</h2>
    <div class="row">
        <!-- LEFT: Billing / Shipping -->
        <div class="col-lg-7 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Billing & Shipping Information</h5>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="First Name" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Last Name" required>
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="Address Line 1" required>
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="Address Line 2 (Optional)">
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="City" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" placeholder="Province" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" placeholder="ZIP" required>
                            </div>
                            <div class="col-md-6">
                                <input type="tel" class="form-control" placeholder="Phone Number" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" placeholder="Email" required>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Payment Method</h5>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="payment" id="cod" checked>
                        <label class="form-check-label" for="cod">Cash on Delivery</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="payment" id="gcash">
                        <label class="form-check-label" for="gcash">GCash</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="payment" id="card">
                        <label class="form-check-label" for="card">Credit / Debit Card</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT: Summary -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Order Summary</h5>
                    <div class="d-flex justify-content-between">
                        <span>Product Name 1</span>
                        <span>₱1,299.00</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Product Name 2</span>
                        <span>₱598.00</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <span>₱1,897.00</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Shipping</span>
                        <span>₱100.00</span>
                    </div>
                    <div class="d-flex justify-content-between fw-bold fs-5 mt-2">
                        <span>Total</span>
                        <span>₱1,997.00</span>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <label class="form-label fw-semibold">Coupon Code</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter code">
                        <button class="btn btn-outline-secondary">Apply</button>
                    </div>
                </div>
            </div>

            <button class="btn btn-outline-primary w-100 btn-lg">Place Order</button>
        </div>
    </div>
</section>

@await Html.PartialAsync("_Footer")
