@{
    ViewData["Title"] = "Product Page";
}

<!-- ========== Product Banner / Hero Section ========== -->
<section class="bg-light py-5 text-center border-bottom">
    <div class="container">
        <h1 class="display-5 fw-bold">Shop All Products</h1>
        <p class="lead text-muted">Discover top-rated items, new arrivals, and best-selling gadgets!</p>
        <a href="#featured" class="btn btn-primary px-4 mt-3">Browse Now</a>
    </div>
</section>

<!-- =======================  FEATURED PRODUCTS  ======================= -->
<section class="container my-5">
    <h2 class="mb-4">Featured Products</h2>
    <div class="row">
        @{
            var products = new[]
            {
                new { Id = 1, Name = "Product1", Price = 1299.00, Image = "fp-1.jpg", Badge = "Best Seller" },
                new { Id = 2, Name = "Product2", Price = 1799.00, Image = "fp-2.jpg", Badge = "New" },
                new { Id = 3, Name = "Product3", Price = 899.00, Image = "fp-3.jpg", Badge = "" },
                new { Id = 4, Name = "Product4", Price = 5499.00, Image = "fp-1.jpg", Badge = "Limited Stock" },
                new { Id = 5, Name = "Product5", Price = 299.00, Image = "fp-5.jpg", Badge = "" },
                new { Id = 6, Name = "Product6", Price = 1399.00, Image = "fp-6.jpg", Badge = "Sale" },
                new { Id = 7, Name = "Product7", Price = 1699.00, Image = "fp-2.jpg", Badge = "" },
                new { Id = 8, Name = "Product8", Price = 499.00, Image = "fp-8.jpg", Badge = "" },
            };
        }

        @foreach (var p in products)
        {
            <div class="col-lg-3 col-md-4 col-6 mb-4">
                <div class="card h-100 shadow-sm border-0 position-relative">
                    @if (!string.IsNullOrEmpty(p.Badge))
                    {
                        <span class="badge bg-danger position-absolute top-0 start-0 m-2">@p.Badge</span>
                    }
                    <img src="@($"/img/{p.Image}")" class="card-img-top" alt="@p.Name" />
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title fw-semibold">@p.Name</h6>
                        <p class="text-primary fw-bold mb-2">₱@p.Price.ToString("N2")</p>
                        <div class="mb-2 text-warning">
                            ★★★★☆
                        </div>
                        <a href="/Products/Details/@p.Id" class="mt-auto btn btn-outline-primary btn-sm w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


@* Testimonials SECTION *@
@await Html.PartialAsync("_Testimonials")

@* TrustedBrand SECTION *@
@await Html.PartialAsync("_TrustedBrand")

@* Footer SECTION *@
@await Html.PartialAsync("_Footer")
